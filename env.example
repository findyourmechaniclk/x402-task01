# ==== X402 Protocol Settings ====
X402_SECRET_KEY=your_secret_key_here
X402_CHALLENGE_EXPIRY=300 # seconds
X402_MIN_PAYMENT=0.01 # USDC

# ==== OpenAI Configuration ====
OPENAI_API_KEY=sk_test_...
OPENAI_ORGANIZATION_ID=org-...
NEXT_PUBLIC_OPENAI_ENABLED=true

# ==== Google Gemini Configuration ====
GOOGLE_GEMINI_API_KEY=AIzaS...
