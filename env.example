PAYMENT_CONFIRMATION_WAIT=30 # seconds

# ==== Rate Limiting ====
RATE_LIMIT_WINDOW=3600 # seconds
RATE_LIMIT_MAX_REQUESTS=100

# ==== Model Pricing ====
GPT4_COST_PER_REQUEST=0.03
GEMINI_COST_PER_REQUEST=0.01
CLAUDE_COST_PER_REQUEST=0.02
DALL_E_COST_PER_REQUEST=0.10

# ==== CORS Configuration ====
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,https://yourapp.com

# ==== Logging ====
LOG_LEVEL=info # debug, info, warn, error
LOG_FORMAT=json # json or text

# ==== Monitoring (Optional) ====
# Sentry Error Tracking
SENTRY_DSN=

# ==== Development Tools ====
DEBUG=false
MOCK_PAYMENTS=false # Set to true for testing without real payments